{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/layout.jsx", "src/app/page.jsx", "src/app/components/navbar/navbar.jsx", "src/app/components/projects/projects.jsx", "src/app/components/skills/skills.jsx", "src/app/components/hero/hero.jsx", "src/app/components/experience/experience.jsx", "src/app/components/contact/contact.jsx", "src/app/components/certification/certification.jsx"],
  "exclude": ["node_modules"]
}
